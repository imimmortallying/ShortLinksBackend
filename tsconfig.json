{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["dom", "es6"],                     
    "allowJs": true,
    "outDir": "./dist",                          
    "rootDir": "./src",
    "strict": false,   
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "**/*.spec.ts"
  ]
}